<%-include("header.ejs")-%>
        <div class="container">
                <div class="d-flex  flex-wrap justify-content-center h-100">
                    <div class="card">
                        <div class="card-header">
                            <div ><h3>Book your slot</h3></div>
                           
                        
                        <div class="card-body">
                            <form action="/" method="POST">
                                <div class="input-group form-group">
                                    
                                    <input type="text" class="form-control" name="ration_num" placeholder="Ration card number" required>
                                    
                                </div>
                                
                                <label for="date">Date</label>
                                <div class="input-group form-group">
                                        
                                        <input type="date" id="date" class="form-control" name="date" placeholder="Schedule date" min=" " required>
                                    </div>
                               <label for="Time">Time</label>
                                    <div class="input-group form-group">
                                            
                                            <input type="time" class="form-control" name="time" placeholder="Schedule date" min="10:00" max="19:00" required>
                                        </div>    
                                
                                
                                <div class="form-group">
                                    <input type="submit" value="submit" class="btn login_btn">
                                </div>
                            </form>
                        </div>
                        <p style="color:white"><%=error%></p>
                    
                    </div>
                </div>
            </div>
            <script>
                let  today = new Date();
                let  dd = today.getDate();
                let  mm = today.getMonth()+1; 
                let  yyyy = today.getFullYear();
                 if(dd<10){
                        dd='0'+dd
                    } 
                    if(mm<10){
                        mm='0'+mm
                    } 
                
                today = yyyy+'-'+mm+'-'+dd;
                document.getElementById("date").setAttribute("min", today);</script>
            <%-include("footer.ejs")-%>